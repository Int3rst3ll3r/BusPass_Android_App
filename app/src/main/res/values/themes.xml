<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BusPass" parent="Theme.Design.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="actionOverflowButtonStyle">@style/IconOverflow</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BusPass.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BusPass.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BusPass.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="IconOverflow" parent="Widget.AppCompat.ActionButton.Overflow">

        <item name="android:tint">@color/white</item>
    </style>

</resources>